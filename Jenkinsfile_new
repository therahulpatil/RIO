pipeline {
    agent any 
    
    tools {
        maven 'Maven3.6.3'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/therahulpatil/RIO'
            }
        }
        
        stage('Build') {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
            }
        }
        
        stage('Package') {
            steps {
                sh "mvn package"
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
    }
}

